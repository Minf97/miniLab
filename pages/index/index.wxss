
page {
  background-color: rgb(246, 246, 246);
}

.container {
  padding: 10rpx 10rpx;
}
.scroll1{
  position: relative;
  border-radius: 20rpx;
  width: 100%;
  height: 330rpx;
  background-color: #fff;
  overflow: hidden;
}
scroll-view {
  white-space: nowrap;
}
/* 去除滚动条 */
::-webkit-scrollbar {
  display:none;
  width:0;
  height:0;
  color:transparent;
}
.scrollContain {
  display: flex;
  height: 330rpx;
}

.scroll_item {
  display: flex;
  flex-direction: column ;
  align-items: center;
  margin: 10rpx 20rpx;
  width: 140rpx;
  height: 140rpx;
}
.scroll_item image {
  display: block;
  width: 88rpx;
  height: 88rpx;
}
.scroll_item text {
  margin-top: 8rpx;
  line-height: 34rpx;
  color: rgb(51,51,51,1);
  font-size: 24rpx;
}
.slider {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background: #eee;
}

.slider-inside {
  transform: translateX(-100%);
  width: 42rpx;
  height: 100%;
  border-radius: 3rpx;
  background-color: #31B877;
}
/* 滑块滑动模拟 */
.slider-inside-location {
  position: absolute;
  left: 65.625%;
}
.inform {
  display: flex;
  justify-content: left;
  align-items: center;
  width: 100%;
  height: 70rpx;
  margin: 15rpx 0;
  padding-left: 25rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 25rpx;
}
.inform .informContain {
  width: 100%;
  height: 70rpx;
  align-items: center;
  line-height: 65rpx;
  margin-left: 10rpx;
}
.schedule {
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  border-radius: 25rpx;
}
.remind {
  display: flex;
  justify-content: space-between;
}
.remindLeft {
  margin: 30rpx 0 30rpx 30rpx;
}
.remindLeft-remind {
  display:inline-block;
  color: rgb(57, 137, 168);
  font-size: 33rpx;
}
.remindLeft-time {
  font-size: 28rpx;
  color: #ccc;
}
.remindRight{
  display: flex;
  margin: 30rpx 40rpx ;
  justify-content: center;
  align-items: center;
}
.remindRight-text {
  border: 4rpx solid rgb(172, 235, 227);
  border-radius: 25rpx;
  padding: 7rpx 10rpx;
  font-size: 30rpx;
  color: rgb(172, 235, 227);
}
/* 分割线 */
.view_fengexian {
  width: 96%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 0rpx 2% 0rpx 2%;
}

/* 两个view的样式 */
.view_fengexian view {
  width: 33%;
  height: 2rpx;
  background: linear-gradient(to right, #ead6ee, #a0f1ea);
}

/* 字体的样式 */
.text_fengexian {
  font-size: 25rpx;
  color: rgb(57, 137, 168);
  margin: 0rpx 2% 0rpx 2%;
}

.labClass_item {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0 ;
}
.labClass_item .firstchild {
  padding: 8px 15px;
  border-radius: 20rpx;
  margin: 0 20rpx;
  text-align: center;
  background-color: #e6f9f7;
  font-size: 13px;
}
.firstchild text:nth-child(1){
  display: block;
}
.secondchild {
  justify-content: space-between;
  display: flex;
  font-size: 13px;
  align-items: center;
  border-radius: 20rpx;
  flex: 1;
  padding: 0.5px 11px;
  background-color: #e6f9f7;
  margin-right: 20rpx;
}
